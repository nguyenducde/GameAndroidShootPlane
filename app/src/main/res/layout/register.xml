<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login.SendMail"
    android:gravity="center"
    android:background="@drawable/bgnight_blur"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="40dp"
        android:paddingRight="40dp">

        <TextView
            android:layout_width="369dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/annie_use_your_telescope"
            android:text="Welcome back!"
            android:textColor="#FFF"
            android:textSize="63sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:fontFamily="@font/gafata"
            android:text="Create a new account."
            android:textColor="#FFF"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/edtEmailReg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/gafata"
            android:hint="Email Address"
            android:paddingTop="16dp"
            android:paddingBottom="10dp"
            android:textColor="#FFF"
            android:textColorHint="#FFF"
            android:textSize="16sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFF"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/edtPassReg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:fontFamily="@font/gafata"
                android:hint="Password"
                android:paddingTop="16dp"
                android:paddingBottom="10dp"
                android:textColor="#FFF"
                android:textColorHint="#FFF"
                android:textSize="16sp" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFF"/>

        <EditText
            android:id="@+id/edtRePassReg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/gafata"
            android:hint="RePassword"
            android:paddingTop="16dp"
            android:paddingBottom="10dp"
            android:textColor="#FFF"
            android:textColorHint="#FFF"
            android:textSize="16sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFF"/>

        <ProgressBar
            android:id="@+id/progressBarReg"
            style="?android:attr/progressBarStyle"
            android:layout_width="335dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:indeterminate="true"
            android:progress="50"
            android:visibility="invisible" />
        <TextView
            android:id="@+id/txtregReg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_bg"
            android:fontFamily="@font/gafata"
            android:gravity="center"
            android:padding="16dp"
            android:text="REGISTER"
            android:textColor="#FFF"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtLogReg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/gafata"
            android:gravity="center"
            android:padding="16dp"
            android:text="LOGIN NOW"
            android:textColor="#FFF"
            android:textStyle="bold" />




    </LinearLayout>



</LinearLayout>